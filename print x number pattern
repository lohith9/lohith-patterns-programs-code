CODE :-
#include <iostream>
#include<bits/stdc++.h>
using namespace std;

int main() {
	int n;
	cin>>n;
	int k=1;
	cout<<endl;
	for(int i=0;i<n;i++){
	    int m = n -1 - i;
	    for(int j=0;j<n;j++){
	        if(i==j || m==j){
	        cout<<k<<"";
	        }
	        else
	        cout<<" ";
	    }
	    if(i<n/2)k++;
	    else k--;
	    cout<<'\n';
	} 
}

INPUT:-7
OUTPUT :-
1     1
 2   2 
  3 3  
   4   
  3 3  
 2   2 
1     1
